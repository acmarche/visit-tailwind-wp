{% set images = ['Ado.jpg','Duo-WBT.jpg','Enfants-WBT.jpg','EVC.png','Groupe.jpg','PMR.jpg','Tourismeparticipatif.jpg'] %}
<h2
        class="py-2 px-4 text-center font-montserrat-bold text-2xl text-grey-dark lg:text-left xl:p-4">
    {{ 'ideas.home'|trans }}
</h2>
<section class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-2 items-center justify-center mx-auto">
    {% for img in images %}
            <a class="relative max-w-xs overflow-hidden bg-cover bg-no-repeat group">
                <img
                        src="{{ template_uri() }}/assets/images/ideas/{{ img }}"
                        class="max-w-sm transition duration-300 ease-in-out group-hover:scale-110 rounded-lg"
                        alt="Louvre"/>
                <div
                        class="absolute bottom-0 left-0 right-0 top-0 h-full w-full overflow-hidden bg-indigo-700 bg-fixed opacity-0 transition duration-300 ease-in-out group-hover:opacity-50"></div>
            </a>
    {% endfor %}
</section>