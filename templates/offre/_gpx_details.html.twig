{% if gpx != null %}
    <h3 class="font-montserrat-semi-bold text-cta-light text-md border-bottom">
        Détails du parcours
    </h3>
    <div class="flex flex-col gap-2">
        <div class="grid grid-cols-1 xl:grid-cols-[20rem,1fr] gap-2">
            <span class="font-montserrat-semi-bold text-cta-dark">Distance</span>
            <span class="text-caractere">{{ offre.gpx_distance }} km</span>

            <span class="font-montserrat-semi-bold text-cta-dark">Durée du parcours</span>
            <span class="text-caractere">{{ offre.gpx_duree }}</span>

            <span class="font-montserrat-semi-bold text-cta-dark">Niveau de difficulté</span>
            <span class="text-caractere">{{ offre.gpx_difficulte }}</span>

            {% if offre.gpx_type_circuit != null %}
                <span class="font-montserrat-semi-bold text-cta-dark">
                {{ offre.gpx_type_circuit.urnDefinition.labelByLanguage(locale) }}
            </span>
                <span class="text-caractere">{{ offre.gpx_type_circuit.data|format_pivot_value }}</span>
            {% endif %}

            {% if offre.gpx_cat_circuit != null %}
                <span class="font-montserrat-semi-bold text-cta-dark">
                {{ offre.gpx_cat_circuit.urnDefinition.labelByLanguage(locale) }}
            </span>
                <span class="text-caractere">{{ offre.gpx_cat_circuit.data|format_pivot_value }}</span>
            {% endif %}

            <span class="font-montserrat-semi-bold text-cta-dark">Télécharger le gpx</span>
            <span class="text-caractere">
                {% for gpx in offre.gpxs %}
                    <a href="{{ template_uri() }}/downloader.php?codecgt={{ gpx.codeCgt }}"
                       class="flex flex-row gap-2 items-center" rel="nofollow">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                               stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3"/>
                    </svg>
                        Télécharger
                    </a>
                {% endfor %}
            </span>
            {% if offre.idcirkwi %}
                <span class="font-montserrat-semi-bold text-cta-dark">Imprimer le gpx</span>
                <span class="text-caractere">
                {% for gpx in offre.gpxs %}
                    <a href="https://www.cirkwi.com/fr/exporter-pdf/{{ offre.idcirkwi }}/fr?mb_id_outil=201467&mb_use_temp=1"
                       class="flex flex-row gap-2 items-center" rel="nofollow">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round"
                                                                         d="M6.72 13.829c-.24.03-.48.062-.72.096m.72-.096a42.415 42.415 0 0110.56 0m-10.56 0L6.34 18m10.94-4.171c.24.03.48.062.72.096m-.72-.096L17.66 18m0 0l.229 2.523a1.125 1.125 0 01-1.12 1.227H7.231c-.662 0-1.18-.568-1.12-1.227L6.34 18m11.318 0h1.091A2.25 2.25 0 0021 15.75V9.456c0-1.081-.768-2.015-1.837-2.175a48.055 48.055 0 00-1.913-.247M6.34 18H5.25A2.25 2.25 0 013 15.75V9.456c0-1.081.768-2.015 1.837-2.175a48.041 48.041 0 011.913-.247m10.5 0a48.536 48.536 0 00-10.5 0m10.5 0V3.375c0-.621-.504-1.125-1.125-1.125h-8.25c-.621 0-1.125.504-1.125 1.125v3.659M18 10.5h.008v.008H18V10.5zm-3 0h.008v.008H15V10.5z"/>
                        </svg>
                        Imprimer le pdf
                    </a>
                {% endfor %}
            </span>
            {% endif %}
        </div>
    </div>
{% endif %}