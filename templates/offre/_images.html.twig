{% if offre.images|length > 1 %}
    <div class="carousel"
         data-flickity='{ "imagesLoaded": true,"freeScroll": true,"wrapAround": true,"pageDots": false }'>
        {% for media in offre.images %}
            <div class="carousel-cell">
                <img src="{{ media }}" alt="orange tree" loading="lazy"/>
            </div>
        {% endfor %}
    </div>
{% elseif offre.images|length > 0 %}
    <img src="{{ offre.images[0] }}" alt="orange tree" loading="lazy"/>
{% endif %}