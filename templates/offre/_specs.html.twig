    {% for keyname,data in specs %}
        <h4 class="text-lg text-cta-dark"><strong>{{ data.category.name }}</strong> {{ data.category.urn }}</h4>
        <div class="flex flex-col gap-2">
            {% for item in data.items %}
                <div class="flex flex-row gap-2">
                    <div><strong>{{ item.name }}</strong></div>
                    <div class="text-cta-light">{{ item.value }}</div>
                    <div>{{ item.type }}</div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
